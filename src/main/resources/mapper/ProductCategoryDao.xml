<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hytc.o2o.dao.ProductCategoryDao">

    <insert id="insertProductCategoryList" parameterType="java.util.List">
          INSERT INTO
              tb_shop_categoery(
              shop_categoery_name,
              shop_categoery_img,
              priority,
              create_time,
              last_edit_time,
              parent_id
              )
          VALUES
              <foreach collection="list" item="productCategory" index="index" separator=",">
                  (
                      #{productCategory.productionCategoryName},
                      '',
                      #{productCategory.priority},
                      NOW(),
                      NOW(),
                      #{productCategory.shopId}
                  )
              </foreach>
    </insert>

    <delete id="delProductCategoeryByProductId" >
        DELETE
        FROM
            tb_shop_categoery
        WHERE
            shop_categoery_id=#{productId}
    </delete>
</mapper>